<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutsHolder">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLayout"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@mipmap/bjack_launcher"
            android:id="@+id/iV_blackjack"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:text="@string/game_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tV_game_first"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold|italic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/bjack_launcher"
            android:id="@+id/iV_blackjack_2"
            android:layout_weight="0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/midLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:layout_height="20dp"
            app:srcCompat="@drawable/thin_line"
            android:id="@+id/thin_line_1"
            android:layout_gravity="center"
            android:layout_width="match_parent" />

        <TextView
            android:text="@string/dealer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tV_dealer1"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <TextView
            android:text="@string/dealer_total_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tV_dealer_total_label"
            android:layout_weight="0.5"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dealerLayout_1"
            android:gravity="center"
            android:background="@android:color/background_light">

            <TextView
                android:text="@string/dealer_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tV_dealer_total"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <TextView
            android:text="@string/dealer_new_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dealer_new_label"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dealerLayout_2"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:text="@string/dealer_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dealer_new"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/background_light" />

        </LinearLayout>

        <TextView
            android:text="@string/player_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_player_1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <TextView
            android:text="@string/player_total_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tV_player_total_label"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerLayout_1"
            android:gravity="center">

            <TextView
                android:text="@string/player_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tV_player_total"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:background="@android:color/background_light" />

        </LinearLayout>

        <TextView
            android:text="@string/player_new_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tV_player_new_label"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/playerLayout_2"
            android:gravity="center">

            <TextView
                android:text="@string/player_new"
                android:layout_width="wrap_content"
                android:id="@+id/tV_player_new"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/background_light"
                android:layout_height="55dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottomLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:layout_height="20dp"
            app:srcCompat="@drawable/thin_line"
            android:id="@+id/thin_line_2"
            android:layout_gravity="center"
            android:layout_width="match_parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonsLayout">

            <Button
                android:text="@string/game_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_hit"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/colorPrimary"
                android:layout_marginRight="2.5dp" />

            <Button
                android:text="@string/game_stand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_stand"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="2.5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonsLayout_2"
            android:layout_marginTop="5dp">

            <Button
                android:text="@string/game_reset"
                android:layout_height="wrap_content"
                android:id="@+id/button_reset"
                android:layout_width="200dp"
                android:layout_gravity="center"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="?attr/colorPrimary"
                android:textColor="@android:color/holo_red_light" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>